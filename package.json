{
  "name": "vibe-kanban-tracker",
  "version": "1.0.0",
  "description": "Browser extension to track vibe-kanban activity and export to OpenTelemetry",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "package": "npm run build && cd dist && zip -r ../vibe-kanban-tracker.zip .",
    "sign": "npm run build && web-ext sign --source-dir=dist --channel=unlisted",
    "lint:ext": "web-ext lint --source-dir=dist"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.10.7",
    "copy-webpack-plugin": "^12.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "web-ext": "^8.4.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
